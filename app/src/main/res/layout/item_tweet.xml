<!--  -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivProfileImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:color/black" />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="69dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:text="TextView"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/tvUserName"
        android:layout_below="@+id/tvUserName"
        android:layout_marginLeft="1dp"
        android:layout_marginStart="1dp"
        android:layout_toEndOf="@+id/ivProfileImage"
        android:fontFamily="sans-serif"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvUserName"
        android:layout_marginStart="5dp"
        android:maxWidth="120dp"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvTimeCreated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollHorizontally="true"
        android:maxWidth="80dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="TextView"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/tvName" />

    <ImageView
        android:id="@+id/ivRetweet"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_retweet"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/ivReply" />


    <ImageView
        android:id="@+id/ivDirectMessage"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/ic_vector_messages_stroke"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/tvFavCount" />

    <ImageView
        android:id="@+id/ivFavorite"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:adjustViewBounds="true"
        android:clickable="true"
        app:srcCompat="@drawable/ic_favorite"
        android:scaleType="centerInside"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/tvRtCount" />

    <ImageView
        android:id="@+id/ivReply"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:clickable="true"
        app:srcCompat="@drawable/reply_icon"
        android:layout_below="@+id/tvBody"
        android:layout_alignStart="@+id/tvBody" />

    <TextView
        android:id="@+id/tvFavCount"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/ivFavorite"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvRtCount"
        android:layout_width="35dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/ivRetweet"
        android:text="TextView" />


</RelativeLayout>

