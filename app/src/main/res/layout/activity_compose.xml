<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.codepath.apps.restclienttemplate.ComposeActivity">

    <Button
        android:id="@+id/btTweet"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/button_tweet"
        android:text="Tweet"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="296dp"
        tools:layout_editor_absoluteY="462dp"
        android:layout_marginEnd="14dp"
        android:layout_below="@+id/inputLayout"
        android:layout_alignParentEnd="true" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:counterEnabled="true"
        app:counterMaxLength="140"
        app:hintEnabled="false"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <EditText
            android:id="@+id/etTweetBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:gravity="left|top"
            android:hint="What's happening?"
            android:inputType="textMultiLine"
            android:maxLength="140"
            android:maxLines="5"
            android:minLines="4"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="4dp" />

    </android.support.design.widget.TextInputLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="28dp"
        app:srcCompat="@drawable/ic_vector_photo_stroke"
        android:layout_below="@+id/inputLayout"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="35dp"
        app:srcCompat="@drawable/ic_vector_gif_pill_stroke"
        android:layout_below="@+id/inputLayout"
        android:layout_toEndOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="33dp"
        app:srcCompat="@drawable/ic_vector_location_stroke"
        android:layout_below="@+id/inputLayout"
        android:layout_toEndOf="@+id/imageView2" />


</RelativeLayout>
